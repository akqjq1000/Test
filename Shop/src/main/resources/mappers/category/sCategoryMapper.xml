<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.idu.shop.sCategoryMapper">
    <select id="readList" resultType="com.idu.shop.domain.category.sCategory">
        <![CDATA[select * from s_category]]>
    </select>
    <select id="read" resultType="com.idu.shop.domain.category.sCategory">
        SELECT * FROM s_category WHERE id=#{cateNo}
    </select>
    <insert id="insert">
        INSERT INTO s_category VALUES(seq_s_category.nextval, #{name}, #{mCateNo})
    </insert>
    <update id="update">
        update s_category set name=#{name}, mCateNo=#{mCateNo} where id=#{id}
    </update>
    <delete id="deleteBymCateNo">
        delete from s_category where mCateNo=#{mCateNo}
    </delete>
    <delete id="delete">
        delete from s_category where id = #{cateNo}
    </delete>

</mapper>