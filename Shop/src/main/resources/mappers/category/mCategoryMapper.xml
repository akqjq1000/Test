<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.idu.shop.mCategoryMapper">
    <select id="readList" resultType="com.idu.shop.domain.category.mCategory">
        <![CDATA[select * from m_category]]>
    </select>
    <select id="readListByBCateNo" resultType="com.idu.shop.domain.category.mCategory">
        <![CDATA[select * from m_category where bCateNo = #{bCateNo}]]>
    </select>
    <select id="readListByMCateNo" resultType="com.idu.shop.domain.category.mCategory">
        <![CDATA[select * from m_category where mCateNo = #{mCateNo}]]>
    </select>
    <select id="read" resultType="com.idu.shop.domain.category.mCategory">
        SELECT * FROM m_category WHERE id=#{cateNo}
    </select>
    <insert id="insert">
        INSERT INTO m_category VALUES(seq_m_category.nextval, #{name}, #{bCateNo})
    </insert>
    <update id="update">
        update m_category set name=#{name}, bCateNo=#{bCateNo} where id=#{id}
    </update>
    <delete id="deleteBybCateNo">
        delete from m_category where bCateNo=#{bCateNo}
    </delete>
    <delete id="delete">
        delete from m_category where id = #{cateNo}
    </delete>

</mapper>