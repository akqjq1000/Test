<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.idu.shop.ReviewMapper">
    <select id="readList" resultType="com.idu.shop.domain.order.Review">
        <![CDATA[select * from review]]>
    </select>
    <select id="readProductNoList" resultType="com.idu.shop.domain.order.Review">
        <![CDATA[select * from review where productNo=#{productNo}]]>
    </select>
    <select id="read" resultType="com.idu.shop.domain.order.Review">
        SELECT * FROM review WHERE id=#{id}
    </select>
    <insert id="insert">
        INSERT INTO review VALUES(seq_review.nextval, #{productNo}, #{memberNo}, #{ratio}, #{comments}, SYSDATE)
    </insert>
    <update id="update">
        update review set memberNo=#{memberNo}, productNo=#{productNo}, ratio=#{ratio}, comments=#{comments}, regdate=#{regdate} where id=#{id}
    </update>
    <delete id="delete">
        delete from review where id = #{id}
    </delete>

</mapper>