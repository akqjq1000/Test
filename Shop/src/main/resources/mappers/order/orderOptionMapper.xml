<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.idu.shop.OrderOptionMapper">
    <select id="readList" resultType="com.idu.shop.domain.order.OrderOption">
        <![CDATA[select * from order_option]]>
    </select>
    <select id="read" resultType="com.idu.shop.domain.order.OrderOption">
        SELECT * FROM order_option WHERE orderNo=#{orderNo}
    </select>
    <insert id="insert">
        INSERT INTO order_option VALUES(#{orderNo}, #{optionNo}, #{optionValueNo})
    </insert>
    <update id="update">
        update order_option set memberNo=#{memberNo}, productNo=#{productNo}, count=#{count} where id=#{id}
    </update>
    <delete id="delete">
        delete from order_option where id = #{id}
    </delete>

</mapper>