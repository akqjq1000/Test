<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.idu.shop.ShoppingCartMapper">
    <select id="readList" resultType="com.idu.shop.domain.order.ShoppingCart">
        <![CDATA[select * from shopping_cart]]>
    </select>
    <select id="readByMemberNoList" resultType="com.idu.shop.domain.order.ShoppingCart">
        <![CDATA[select * from shopping_cart order by productNo where memberNo=#{memberNo}]]>
    </select>
    <select id="read" resultType="com.idu.shop.domain.order.ShoppingCart">
        SELECT * FROM shopping_cart WHERE serialNumber=#{serialNumber} AND cnt=#{cnt}
    </select>
    <insert id="insert">
        INSERT INTO shopping_cart VALUES(seq_shopping_cart.nextval, #{serialNumber}, #{cnt}, #{memberNo}, #{productNo}, #{count}, SYSDATE)
    </insert>
    <update id="update">
        update shopping_cart set memberNo=#{memberNo}, productNo=#{productNo}, #{count} where id=#{id}
    </update>
    <delete id="delete">
        delete from shopping_cart where id = #{id}
    </delete>
    <select id="readRecentlyAddedRow" resultType="com.idu.shop.domain.order.ShoppingCart">
        select * from (select * from shopping_cart order by cnt asc) where rownum=1
    </select>

</mapper>